<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Help"
             x:Class="Help.ChildPage"
             BindingContext="{Binding Source={RelativeSource Self}}"
             x:DataType="local:ChildPage"
             Title= "Child Page">
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="OnHelpIconClicked">
            <ToolbarItem.IconImageSource>
                <FontImageSource Glyph="?"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <StackLayout>
        <Button Text="Help Index" Clicked="OnHelpIndexButtonClicked" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
    </StackLayout>
</ContentPage>